{
    "name": "kolasai/clean-talk-php-client",
    "type": "library",
    "description": "Official Clean Talk client for PHP applications.",
    "keywords": ["ai", "kolasai", "classifier", "anti-spam", "anti-insult", "classification", "artificial intelligence", "clean talk"],
    "license": "Apache-2.0",
    "homepage": "https://kolas.ai/clean-talk/",
    "authors": [{
        "name": "kolas.ai",
        "email": "info@kolas.ai",
        "homepage": "https://kolas.ai/"
    }],
    "require": {
        "php": ">=7.1",
        "guzzlehttp/guzzle": "^6.0|^7.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4" : {
            "CleanTalk\\" : "src/",
            "Tests\\" : "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "post-install-cmd": ["@test"],
        "post-update-cmd": ["@test"]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
